mixin headerMenuLink(name, href)
    li.header__menu__item
        a(class!=attributes.class href=href).header__menu__link= name
        
.header
    .header__container.container
        .header__logo
            i.header__logo__icon.far.fa-gem
        .header__menu
            ul.header__menu__list
                +headerMenuLink('Home', '#')(class="active")
                +headerMenuLink('About', '#about')
                +headerMenuLink('Work', '#work')
                +headerMenuLink('Process', '#process')
                +headerMenuLink('Services', '#services')
                +headerMenuLink('Testimonials', '#testimonials')
                +headerMenuLink('Contact', '#contact')  
        .header__menu__dropdown
            i.fas.fa-bars
                                               